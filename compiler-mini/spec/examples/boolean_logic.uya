// 布尔逻辑示例
fn is_positive(n: i32) bool {
    return n > 0;
}

fn is_even(n: i32) bool {
    return (n % 2) == 0;
}

fn is_positive_even(n: i32) bool {
    return is_positive(n) && is_even(n);
}

fn main() i32 {
    const x: i32 = 10;
    const y: bool = is_positive_even(x);
    if y {
        return 1;
    } else {
        return 0;
    }
}

