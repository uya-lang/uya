// 测试程序：验证 &byte 类型指针的数组访问
// 模拟 arena.uya 中的 buffer_ptr[0] 场景

fn test_buffer_ptr_access() byte {
    // 创建一个缓冲区
    var buffer: [byte: 100] = [];
    
    // 获取缓冲区指针（&byte 类型）
    const buffer_ptr: &byte = &buffer[0] as &byte;
    
    // 测试：直接使用 buffer_ptr 进行数组访问
    const temp: byte = buffer_ptr[0];
    
    return temp;
}

fn main() i32 {
    const result: byte = test_buffer_ptr_access();
    return 0;
}

