// 原子类型支持多种整数类型测试，规范 uya.md §13
// 测试不同整数类型的原子操作
// 返回 0 表示通过

fn main() i32 {
    // i32 原子类型
    var a32: atomic i32 = 100;
    a32 += 50;
    if a32 != 150 {
        return 1;
    }
    
    // u32 原子类型
    var u32: atomic u32 = 200;
    u32 += 100;
    if u32 != 300 {
        return 2;
    }
    
    // i64 原子类型
    var a64: atomic i64 = 1000;
    a64 += 500;
    if a64 != 1500 {
        return 3;
    }
    
    // u64 原子类型
    var u64: atomic u64 = 2000;
    u64 += 1000;
    if u64 != 3000 {
        return 4;
    }
    
    return 0;
}

