// 测试 @syscall 内置函数 - SYS_exit
// 功能：正常退出程序

fn main() i32 {
    // Linux x86-64 系统调用号
    const SYS_exit: i64 = 60;
    
    // 打印消息（使用 SYS_write）
    const SYS_write: i64 = 1;
    const msg: *byte = "Exiting via @syscall...\n";
    @syscall(SYS_write, 1, msg as i64, 24);
    
    // 调用 SYS_exit(0)
    // 注意：这个调用不会返回（noreturn）
    @syscall(SYS_exit, 0);
    
    // 理论上不会执行到这里
    return 1;
}

