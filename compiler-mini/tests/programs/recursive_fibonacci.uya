// 递归函数测试 - 斐波那契数列
// 测试多重递归调用

fn fibonacci(n: i32) i32 {
    if n <= 0 {
        return 0;
    } else {
        if n == 1 {
            return 1;
        } else {
            return fibonacci(n - 1) + fibonacci(n - 2);
        }
    }
}

fn main() i32 {
    // 测试 fibonacci(0) = 0
    const f0: i32 = fibonacci(0);
    if f0 != 0 {
        return 1;
    }
    
    // 测试 fibonacci(1) = 1
    const f1: i32 = fibonacci(1);
    if f1 != 1 {
        return 2;
    }
    
    // 测试 fibonacci(2) = 1
    const f2: i32 = fibonacci(2);
    if f2 != 1 {
        return 3;
    }
    
    // 测试 fibonacci(5) = 5
    const f5: i32 = fibonacci(5);
    if f5 != 5 {
        return 4;
    }
    
    // 测试 fibonacci(7) = 13
    const f7: i32 = fibonacci(7);
    if f7 != 13 {
        return 5;
    }
    
    return 0;
}

