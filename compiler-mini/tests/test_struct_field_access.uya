// 测试结构体字段访问
// 验证结构体字段访问和赋值

struct Point {
    x: i32,
    y: i32,
}

fn test_struct_field() i32 {
    var p: Point = Point{ x: 10, y: 20 };
    
    // 字段访问
    const x_val: i32 = p.x;
    const y_val: i32 = p.y;
    
    if x_val != 10 || y_val != 20 {
        return 1;
    }
    
    // 字段赋值
    p.x = 30;
    p.y = 40;
    
    if p.x != 30 || p.y != 40 {
        return 1;
    }
    
    return 0;
}

fn main() i32 {
    return test_struct_field();
}

