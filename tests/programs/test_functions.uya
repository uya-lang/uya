// 测试is_positive和is_even函数

fn is_positive(n: i32) bool {
    return n > 0;
}

fn is_even(n: i32) bool {
    return (n % 2) == 0;
}

fn main() i32 {
    const x: i32 = 10;
    
    // 测试is_positive函数
    const pos: bool = is_positive(x);
    
    // 测试is_even函数
    const even: bool = is_even(x);
    
    // 直接返回is_positive的结果
    // 如果is_positive返回true，返回0；否则返回1
    if pos {
        return 0;
    }
    return 1;
}