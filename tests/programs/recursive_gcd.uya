// 递归函数测试 - 最大公约数（GCD）
// 测试欧几里得算法的递归实现

fn gcd(a: i32, b: i32) i32 {
    if b == 0 {
        return a;
    } else {
        return gcd(b, a % b);
    }
}

fn main() i32 {
    // 测试 gcd(48, 18) = 6
    const g1: i32 = gcd(48, 18);
    if g1 != 6 {
        return 1;
    }
    
    // 测试 gcd(18, 48) = 6
    const g2: i32 = gcd(18, 48);
    if g2 != 6 {
        return 2;
    }
    
    // 测试 gcd(17, 13) = 1 (互质)
    const g3: i32 = gcd(17, 13);
    if g3 != 1 {
        return 3;
    }
    
    // 测试 gcd(100, 25) = 25
    const g4: i32 = gcd(100, 25);
    if g4 != 25 {
        return 4;
    }
    
    // 测试 gcd(42, 56) = 14
    const g5: i32 = gcd(42, 56);
    if g5 != 14 {
        return 5;
    }
    
    return 0;
}

