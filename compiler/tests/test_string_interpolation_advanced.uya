extern printf(fmt: *byte, ...) i32;

fn main() i32 {
    // 测试各种格式说明符
    const x: u32 = 255;
    const y: i32 = -42;
    const pi: f64 = 3.14159;
    
    // 十六进制格式
    const msg1: [i8; 32] = "hex=${x:#06x}\n";
    printf(&msg1[0]);
    
    // 有符号整数
    const msg2: [i8; 32] = "y=${y}\n";
    printf(&msg2[0]);
    
    // 浮点数格式化
    const msg3: [i8; 32] = "pi=${pi:.2f}\n";
    printf(&msg3[0]);
    
    // 编译期常量完全展开
    const msg4: [i8; 32] = "sum=${10 + 20}\n";
    printf(&msg4[0]);
    
    return 0;
}

