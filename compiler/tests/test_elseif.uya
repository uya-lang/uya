// 测试else if语句和变量作用域

extern fn printf(fmt: *byte, ...) i32;

fn test_elseif(x: i32) i32 {
    if x > 0 {
        return 1
    } else if x < 0 {
        return -1
    } else {
        return 0
    }
}

fn test_scope1() i32 {
    const a: i32 = 10
    return a
}

fn test_scope2() i32 {
    const a: i32 = 20  // 不同函数中的相同变量名，应该不会冲突
    return a
}

fn main() i32 {
    const result1: i32 = test_elseif(5)
    const result2: i32 = test_elseif(-3)
    const result3: i32 = test_elseif(0)
    
    const scope1: i32 = test_scope1()
    const scope2: i32 = test_scope2()
    
    printf("test_elseif(5) = %d\n", result1)
    printf("test_elseif(-3) = %d\n", result2)
    printf("test_elseif(0) = %d\n", result3)
    printf("test_scope1() = %d\n", scope1)
    printf("test_scope2() = %d\n", scope2)
    
    return 0
}
